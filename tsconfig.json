{
  "ts-node": {
    "compiler": "ttypescript",
    "swc": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./lib",
    "module": "CommonJS",
    "target": "ES2021",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "paths": {
      "@gerard2p/mce": ["src"],
      "@gerard2p/mce/*": ["src/*"]
    },
    "plugins": [
      {"transform" : "./metadata-decorators.ts", "after": true}
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "templates",
    "node_modules"
  ]
}
